<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dolling">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dolling">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <activity android:name=".ui.start.GetStartedActivity" />
        <activity android:name=".ui.start.SignInActivity" />
        <activity android:name=".ui.start.SignUpActivity" />
        <activity android:name=".ui.another.CheckoutActivity" />
        <activity android:name=".ui.start.OtpVerificationActivity" />
        <activity android:name=".ui.another.OrderInProcessActivity" />
        <activity android:name=".ui.another.ReviewActivity" />
        <activity android:name=".ui.another.MapActivity" />
        <activity android:name=".ui.another.RestaurantActivity" />
        <activity android:name=".ui.another.OffersActivity" />
        <activity android:name=".ui.start.WelcomeSliderActivity" />
        <activity android:name=".ui.start.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>